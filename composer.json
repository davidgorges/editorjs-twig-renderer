{
    "name": "davidgorges/editorjs-twig-renderer",
    "description": "Render EditorJS output via Twig",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "Twig",
        "EditorJS",
        "HTML",
        "Renderer",
        "Parser"
    ],
    "authors": [
        {
            "name": "David Gorges",
            "email": "gorges@dekkode.com",
            "homepage": "https://www.dekkode.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-dom": "*",
        "ext-json": "*",
        "twig/twig": "3.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "EditorJS\\Parser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EditorJS\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.3",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests/ --coverage-clover=coverage.xml"
    }
}
